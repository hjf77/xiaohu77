<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fhs.workflow.dao.WorkFlowListenerDAO">
	
	<select id="findForListFromMap" parameterType="java.util.Map" resultType="workFlowListener">
		 SELECT id AS id,
			listener_name AS listenerName,
			listener_type AS listenerType,
			event AS event,
			excute_type AS excuteType,
			excute_content AS excuteContent FROM t_work_flow_listener
		 WHERE 1 = 1 
		<include refid="sqlWhere"/>
		<if test = "start!= null and end != null"> 
				LIMIT ${start}, ${end}
		</if>
	</select>
	
	<select id="findCountFromMap" parameterType="map" resultType="java.lang.Integer">
		 SELECT COUNT(1) AS count  FROM t_work_flow_listener WHERE 1 = 1   <include refid="sqlWhere"/> 
	</select>

	<sql id="sqlWhere">
           <if test="ids != null and ids != '' ">
                  AND id IN (${ids})
           </if>
	</sql>
</mapper>