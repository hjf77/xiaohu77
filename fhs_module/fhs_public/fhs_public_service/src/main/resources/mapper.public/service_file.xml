<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fhs.publics.mapper.ServiceFileMapper">

	<insert id="add" parameterType="com.fhs.publics.dox.ServiceFileDO" useGeneratedKeys="true" keyProperty="fileId">
		 INSERT INTO t_service_file(file_id,file_name,file_suffix)
			 VALUES(#{fileId},#{fileName},#{fileSuffix})
	</insert>

	<delete id="delete" parameterType="com.fhs.publics.dox.ServiceFileDO">
		 DELETE FROM t_service_file	 WHERE file_id=#{fileId}
	</delete>

    <select id="findForListFromMap" parameterType="map" resultType="com.fhs.publics.dox.ServiceFileDO">
         SELECT file_id AS fileId,
			file_name AS fileName,file_suffix AS fileSuffix,upload_date AS uploadDate FROM t_service_file
		 WHERE file_id IN (${fileIds})
    </select>

    <select id="findBeanFromMap" parameterType="map" resultType="com.fhs.publics.dox.ServiceFileDO">
    	SELECT file_id AS fileId,
			file_name AS fileName,file_suffix AS fileSuffix,upload_date AS uploadDate FROM t_service_file
		 WHERE file_id = #{fileId}
    </select>

</mapper>